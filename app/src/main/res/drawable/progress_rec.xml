<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 배경 -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="@color/material_on_primary_disabled" /> <!-- 배경 색상 설정 -->
            <corners android:radius="15dp" /> <!-- 모서리 반지름 설정 -->
        </shape>
    </item>
    <!-- 프로그래스 바 -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="@color/black" /> <!-- 프로그래스 바 색상 설정 -->
            </shape>
        </clip>
    </item>
</layer-list>
